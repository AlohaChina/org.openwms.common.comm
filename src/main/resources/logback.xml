<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="false" scanPeriod="30 seconds">

    <property name="LOG_PATH" value="/tmp/owms"/>
    <property name="MODULE_NAME" value="COMMON"/>
    <property name="SERVICE_NAME" value="COMMON-Comm"/>

    <include resource="logback-appenders.xml"/>
    <include resource="logback-loggers.xml"/>

    <variable scope="context" name="mdcPattern"
              value="%replace(;%X{MSGKEY};%X{MSGDATA}){';+( |$)', ''}"/>
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>

    <appender name="SYSLOG" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <key>Tenant</key>
            <defaultValue>BOOT</defaultValue>
        </discriminator>
        <sift>
            <appender name="SYSLOG-${Tenant}" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
                <destination>openwms.mooo.com:10515</destination>
                <keepAliveDuration>5 minutes</keepAliveDuration>
                <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                    <providers>
                        <timestamp>
                            <timeZone>UTC</timeZone>
                        </timestamp>
                        <pattern>
                            <pattern>
                                {
                                "trace": "%X{X-B3-TraceId:-}",
                                "span": "%X{X-B3-SpanId:-}",
                                "parent": "%X{X-B3-ParentSpanId:-}",
                                "requestId": "%X{X-RequestID}",
                                "tenant": "${Tenant}",
                                "moduleName": "${MODULE_NAME}",
                                "serviceName": "${SERVICE_NAME}",
                                "springAppName": "${springAppName:-}",
                                "severity": "%level",
                                "exportable": "%X{X-Span-Export:-}",
                                "pid": "${PID:-}",
                                "thread": "%thread",
                                "tid": "%tid",
                                "class": "%logger{40}",
                                "telegramType": "%X{lTelegramType:-}
                                "message": "%message"
                                }
                            </pattern>
                        </pattern>
                    </providers>
                </encoder>
            </appender>
        </sift>
    </appender>

    <logger name="com.netflix.discovery" level="OFF"/>
    <logger name="org.openwms" level="DEBUG"/>
    <logger name="org.springframework" level="WARN"/>
    <logger name="CORE_INTEGRATION_MESSAGING" level="DEBUG"/>

    <logger name="PRESENTATION_LAYER_ACCESS" level="DEBUG" additivity="false">
        <appender-ref ref="TSL"/>
        <appender-ref ref="SYSLOG"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="SYSLOG"/>
    </root>

</configuration>